@page
@model LoginModel

<h2>Увійти</h2>

<form method="post" id="loginForm">
    <div class="form-group">
        <label for="Input_Email">Email</label>
        <input asp-for="Input.Email" class="form-control" id="Input_Email" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Input_Password">Password</label>
        <input asp-for="Input.Password" class="form-control" type="password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

<form method="post" asp-page-handler="RecoverPassword" id="recoverForm">
    <!-- Приховане поле для передавання email -->
    <input type="hidden" id="recoverEmail" name="Input.Email" />
    <button type="submit" class="btn btn-link">Нагадати пароль</button>
</form>

<partial name="_ValidationScriptsPartial" />

