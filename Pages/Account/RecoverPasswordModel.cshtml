@page
@model Melodies25.Pages.RecoverPasswordModel
@{
}


<h2>Відновлення пароля</h2>

<form method="post">
    <div class="form-group">
        <label for="Input_Email">Введіть вашу електронну пошту</label>
        <input asp-for="Email" class="form-control" id="Input_Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Нагадати пароль</button>
</form>
