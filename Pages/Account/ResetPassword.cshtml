@page
@model Melodies25.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Скидання пароля";
}
<h2>Скидання пароля</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<form method="post">
    <input asp-for="Input.Email" type="hidden" />
    <input asp-for="Input.Token" type="hidden" />
    <div class="mb-3">
        <label asp-for="Input.NewPassword" class="form-label">Новий пароль</label>
        <input asp-for="Input.NewPassword" class="form-control" type="password" />
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ConfirmPassword" class="form-label">Підтвердження</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Зберегти</button>
</form>
<partial name="_ValidationScriptsPartial" />