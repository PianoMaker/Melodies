@page
@model Melodies25.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Зміна пароля";
}
<div class="infocontainer">
<h2>Зміна пароля</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.CurrentPassword" class="form-label">Поточний пароль</label>
        <input asp-for="Input.CurrentPassword" class="form-control" type="password" />
        <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.NewPassword" class="form-label">Новий пароль</label>
        <input asp-for="Input.NewPassword" class="form-control" type="password" />
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ConfirmPassword" class="form-label">Підтвердження</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Змінити</button>
</form>
</div>

<partial name="_ValidationScriptsPartial" />