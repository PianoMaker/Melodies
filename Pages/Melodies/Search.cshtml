@page
@model Melodies25.Pages.Melodies.SearchModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
    // Pull data prepared in the PageModel for display blocks below
    var melodyPattern = ViewData["melodypattern"] as IEnumerable<string>;
    var matchedMelodiesCount = ViewData["matchedMelodiesCount"] as int? ?? 0;
    int? numerator = Model.TimeSignatureNumerator;
    int? denominator = Model.TimeSignatureDenominator;
    // detect UI language from current culture (fallback to 'uk')
    var lng = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName ?? "uk";
}

@section Styles {
    <link rel="stylesheet" href="~/css/notes.css" asp-append-version="true" />
}
<div class="infocontainer mb-1">
    <h1>@Localizer["SearchHeading"]</h1>
</div>
<div class="searchcontainer h-100 mt-1">

    <!--ЛІВОРУЧ-->

    <div class="searchleftcontainer">
        <form method="post" asp-page-handler="search" id="metaSearchForm">
            <label>@Localizer["AuthorLabel"]</label>
            <input type="text" asp-for="Author" class="form-control w-75" placeholder="@Localizer["SearchAllPlaceholder"]" />

            <label>@Localizer["TitleLabel"]</label>
            <input type="text" asp-for="Title" class="form-control w-75" placeholder="@Localizer["SearchAllPlaceholder"]" />

            <div class="form-check mt-2">
                <input type="checkbox" id="ifPartly" asp-for="IfPartly" class="form-check-input" checked="checked" />
                <label class="form-check-label" for="ifPartly">@Localizer["PartlyMatch"]</label>
            </div>

            <label>@Localizer["StartsWithNote"]</label>


            <select asp-for="Note" class="form-control w-75">
                <option value="" selected disabled>@Localizer["Any"]</option>
                <option value="c">@Localizer["NoteC"]</option>
                <option value="cis">@Localizer["NoteCis"]</option>
                <option value="d">@Localizer["NoteD"]</option>
                <option value="dis">@Localizer["NoteDis"]</option>
                <option value="e">@Localizer["NoteE"]</option>
                <option value="f">@Localizer["NoteF"]</option>
                <option value="fis">@Localizer["NoteFis"]</option>
                <option value="g">@Localizer["NoteG"]</option>
                <option value="gis">@Localizer["NoteGis"]</option>
                <option value="a">@Localizer["NoteA"]</option>
                <option value="ais">@Localizer["NoteAis"]</option>
                <option value="h">@Localizer["NoteH"]</option>
            </select>
            <button type="submit" class="btn btn-melody">@Localizer["SearchButton"]</button>
        </form>

    </div>

    <!--ПРАВОРУЧ-->
    <div class="notesearchrightcontainer">

        <!-- ДЛЯ ТРИВАЛОСТЕЙ -->
        <div class="piano-scroll-wrapper">
            <div class="piano-scroll-inner">
                @await Html.PartialAsync("_durationsTable")
            </div>
        </div>

        <!-- МІЙ СТЕЙНВЕЙ -->
        <div class="piano-scroll-wrapper" aria-label="Piano keyboard scroll container">
            <div class="piano-scroll-inner">
                @await Html.PartialAsync("_PianoKeys")
            </div>
        </div>

        <!--ТАБЛО НОТ -->
        @if (Model.FromFindSimilar == false)
        {
            @* <p>find sim= @Model.FromFindSimilar</p> *@
            <div id="innerNotesContainer">
                <!-- LIVE notation заповнюється melody-search.js -->
                <div id="liveNotation" class="mb-3"></div>

                <div id="patternComments" style="display:none"></div>

                @if (@Model.NewPattern is not null)
                {

                    @for (int index = 0; index < @Model.NewPattern.Count(); index++)
                    {
                        var note = @Model.NewPattern[index];
                        string width = $"{note.DisplayWidth(45, 20)}px";
                        string marginbottom = $"{note.AbsPitch() * 2 - 10}px";
                        if (!@note.Rest)
                        {
                            <div class="outerNoteBox" style="width:@width; height:10px;">
                                <div class="notebox" style="margin-bottom:@marginbottom; width:@width;">
                                    <span>@note.DurSymbol</span><br>
                                </div>
                                <span data-index="@index" class="notaname">@note.Name</span>
                            </div>
                        }
                        else
                        {
                            <div class="outerNoteBox" style="width:@width; height:10px;">
                                <div class="notebox pausebox" style="margin-bottom:@marginbottom; width:@width;">
                                    <span>@note.DurSymbol</span><br>
                                </div>
                                <span data-index="@index" class="notaname">@note.Name</span>
                            </div>
                        }
                        @await Html.PartialAsync("_options")
                    }
                    <script type="module" src="~/js/contextMenu.js"></script>
                }
                else
                {
                    <p id="noNotesMsg">@Localizer["NoNotesEntered"]</p>
                }
            </div>
        }
        else
        {

            <p>___</p>
        }
        <script type="module" src="~/js/noteTable.js"></script>



        <!--КНОПКИ УПРАВЛІННЯ, Нотний рядок і кнопка "Пошук"-->
        @await Html.PartialAsync("_pianoDisplay")

        <!--обрати режим пошуку-->
        <div class="notesinfo d-flex align-items-center gap-3 my-2 compact-controls">
            <div class="form-check me-3">
                <input class="form-check-input" type="radio" name="SearchAlgorithm"
                       value="Substring" id="algSubstring" form="notesearchForm"
                       @(Model.SearchAlgorithm?.Equals("Substring", StringComparison.OrdinalIgnoreCase) == true ? "checked" : null) />
                <label class="form-check-label" for="algSubstring"><span class="hide-mobile">@Localizer["AlgorithmLabel"]&nbsp;</span>@Localizer["Alg_NoGaps"]</label>
            </div>
            <div class="form-check d-flex align-items-center gap-2">
                <input class="form-check-input" type="radio" name="SearchAlgorithm"
                       value="Subsequence" id="algSubsequence" form="notesearchForm"
                       @(Model.SearchAlgorithm?.Equals("Subsequence", StringComparison.OrdinalIgnoreCase) == true ? "checked" : null) />
                <label class="form-check-label" for="algSubsequence"><text class="hide-mobile">@Localizer["AlgorithmLabel"]&nbsp;</text>@Localizer["Alg_WithGaps"]</label>
            </div>
            <!-- LCS max gap slider (1..3) -->
            <div class="hide-mobile">
                <input type="range" min="1" max="3" step="1" value="@Model.MaxGap"
                       id="lcsGap"
                       class="form-range ms-2" style="width:120px" form="notesearchForm" name="MaxGap"
                       disabled="@((Model.SearchAlgorithm?.Equals("Subsequence", StringComparison.OrdinalIgnoreCase) == true) ? null : "disabled")" />
                <span class="small ms-1 @(Model.SearchAlgorithm?.Equals("Subsequence", StringComparison.OrdinalIgnoreCase) == true ? null : "text-muted")">@Localizer["GapLabel"]: <span id="lcsGapVal">@Model.MaxGap</span></span>
            </div>
        </div>
        <div class="notesinfo d-flex align-items-center gap-3 my-2 compact-controls">
            <div class="form-check d-flex align-items-center gap-2">
                <input asp-for="IfIntonation" class="form-check-input" id="ifIntonation" form="notesearchForm" checked="checked" />
                <label class="form-check-label" for="ifIntonation">@Localizer["MelodyOption"]</label>
            </div>
            <div class="form-check d-flex align-items-center gap-2">
                <input asp-for="IfRhythm" class="form-check-input" id="ifRhythm" form="notesearchForm" />
                <label class="form-check-label" for="ifRhythm">@Localizer["RhythmOption"]</label>
            </div>
        </div>



        <!--АУДІО-->

        <audio id="audioPlayer" controls autoplay style="display: none">
            <source id="audioSource" src="" type="audio/mpeg" />
            Your browser does not support the audio element.
        </audio>

    </div>
</div>


<!-- ОПИС ВВЕДЕНИХ НОТ -->
<div class="infocontainer">
    <!-- Loading animation -->
    <div id="searchLoading" class="text-center my-4">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">@Localizer["LoadingResultsAria"]</span>
        </div>
        <p class="mt-2">@Localizer["LoadingResults"]</p>
    </div>
    <h2>@Localizer["ResultsHeading"]</h2>


    @if (melodyPattern != null)
    {
        <p class="hide-mobile">
            @Localizer["EnteredMelody"]
            @foreach (var notes in melodyPattern)
            {
                <text>@notes </text>
            }
        </p>
    }


    <!-- ВІДОБРАЖЕННЯ МЕЛОДІЇ ЩО ЗБІГАЄТЬСЯ-->
    <div class="notescontainer hide" id="matchedMelodiesContainer">
        @for (int i = 0; i < matchedMelodiesCount; i++)
        {
            var songPattern = ViewData[$"songpattern{i}"] as List<string>; //ноти мелодії, що збігаються
            var title = Model.MatchedMelodies[i].Melody.Title; //назва мелодії
            var startposition = Model.MatchedMelodies[i].Position; //позиція початку збігу
            var length = Model.MatchedMelodies[i].CommonLength; //довжина збігу
            var endposition = startposition + length; //позиція кінця збігу
            var filePath = Model.MatchedMelodies[i].Melody.FilePath; //шлях до файлу
            var midiUrl = string.IsNullOrEmpty(filePath) ? null : Url.Content($"~/melodies/{filePath}");
            var matchedIndices = ViewData[$"songmatched{i}"] as List<int> ?? new List<int>(); //для підсвітки нот, що збігаються за індексами
            bool isSubseq = Model.SearchAlgorithm?.Equals("Subsequence", StringComparison.OrdinalIgnoreCase) == true;

            if (songPattern != null)
            {
                var @melodyId = $"melody{i}";
                var notationId = $"notation_match_{i}";
                var commentsId = $"comments_match_{i}";
                <div id="@melodyId" class="mb-3 melody-block" style="cursor:pointer">
                    <!--НАЗВА-->
                    <div class="d-flex align-items-center gap-2">
                        <button id="previoussong" type="button" class="btn btn-outline-secondary song-nav prev" aria-label="previous">
                            <i class="fas fa-chevron-left" aria-hidden="true"></i>
                        </button>
                        <p class="mb-0">@Localizer["MelodyLabel"]: <span class="matchedsongname">@title</span></p>
                        <button id="nextsong" type="button" class="btn btn-outline-secondary song-nav next" aria-label="next">
                            <i class="fas fa-chevron-right" aria-hidden="true"></i>
                        </button>
                    </div>

                    <!--ПЕРЕЛІК НОТ-->
                    <p id="noteslist" class="hide-mobile">
                        @for (int j = 0; j < songPattern.Count; j++)
                        {
                            if (isSubseq)
                            {
                                if (matchedIndices.Contains(j))
                                {
                                    <span style="color:darkmagenta">@songPattern[j]</span>
                                }
                                else
                                {
                                    <text>@songPattern[j] </text>
                                }
                            }
                            else
                            {
                                // substring or default: keep contiguous highlight behavior
                                if (j >= startposition && j < endposition)
                                {
                                    <span style="color:darkmagenta">@songPattern[j]</span>
                                }
                                else
                                {
                                    <text>@songPattern[j] </text>
                                }
                            }
                        }
                    </p>
                    <!--ТРАНСПОЗИЦІЯ-->
                    @if (isSubseq)
                    {
                        <div class="small text-muted">@Localizer["Transposition", Model.MatchedMelodies[i].BestShift]</div>
                    }


                    @if (!string.IsNullOrEmpty(midiUrl))
                    {
                        <!-- НОТАЦІЯ ТУТ -->
                        <div id="@notationId"
                             class="mb-2"
                             data-midi-url="@midiUrl"
                             data-start-position="@startposition"
                             data-comments-id="@commentsId"></div>
                        <!-- КОМЕНТАРІ ТУТ -->
                        <div id="@commentsId" class="small text-muted" data-suppress-summary="1"></div>
                    }
                    else
                    {
                        <div class="small text-muted">@Localizer["FileNotAvailable", filePath]</div>
                    }

                </div>
            }
            else
            {
                <p>@Localizer["MelodyNotFound", i]</p>
            }
        }
    </div>
    <div class="notescontainer hide">
        <p>@Model.Description</p>
    </div>


    <!-- ТАБЛИЦЯ РЕЗУЛЬТАТІВ -->

    <table class="table hide">
        <thead>
            <tr>
                <th>@Localizer["TableName"]</th>
                <th>@Localizer["TableAuthor"]</th>
                <th class="hide-mobile">@Localizer["TableFile"]</th>
                @if (Model.NoteSearch is true)
                {
                    <th>@Localizer["MatchLength"]</th>
                    <th>@Localizer["Position"]</th>
                }
                <th class="col-actions hide-mobile">@Localizer["Actions"]</th>
            </tr>
        </thead>
        <tbody>

            @if (Model.MatchedMelodies is not null && Model.MatchedMelodies.Count > 0 && Model.NoteSearch is true)
            {
                <!--якщо пошук за нотами-->
                @foreach (var mm in Model.MatchedMelodies)
                {
                    var item = mm.Melody;
                    var matchLength = mm.CommonLength;
                    var position = mm.Position;
                    var pairs = mm.Pairs;
                    <tr>
                        <td>
                            <a asp-page="./Details" asp-route-id="@item.ID" class="link-dark">@Html.DisplayFor(modelItem => item.Title)</a>
                        </td>
                        <!--АВТОР-->
                        <td>
                            @if (item.Author is not null)
                            {

                                if (item.Author.Surname == "Українська народна пісня")
                                {
                                    <span class="song-title" data-full="Українська народна пісня" data-short="укр. нар. пісня">
                                        @Localizer["UkrainianFolkSong"]
                                    </span>
                                }
                                else
                                {
                                    if (lng == "uk")
                                    {
                                        <span class="author-name">@item.Author.Name</span>
                                        <span> @Html.DisplayFor(modelItem => item.Author.Surname)</span>
                                    }
                                    else
                                    {
                                        <span class="author-name">@item.Author.NameEn</span>
                                        <span> @Html.DisplayFor(modelItem => item.Author.SurnameEn)</span>
                                    }
                                }
                            }
                        </td>
                        <!--файл-->
                        <td class="hide-mobile">
                            @if (!string.IsNullOrEmpty(item.FilePath))
                            {
                                var midifilepath = Url.Content($"~/melodies/{item.FilePath}");
                                var mp3filepath = Url.Content($"~/mp3/{item.Mp3Filepath}");
                                <div style="display:inline-flex">
                                    <a href="@midifilepath" download class="btn btn-outline-dark light-background">
                                        <i class="fas fa-download"></i>
                                    </a>
                                    <form method="post">
                                        <button type="submit" asp-page-handler="Play" asp-route-midiPath="@item.FilePath"
                                                class="btn btn-outline-dark light-background playButton"
                                                data-filepath="@item.FilePath" id="playButton_@item.FilePath">
                                            <i class="fas fa-play"></i>
                                        </button>
                                    </form>
                                    <button id="stopButton_@item.FilePath" disabled="disabled"
                                            class="stopButton btn btn-outline-dark light-background">
                                        <i class="fas fa-stop"></i>
                                    </button>
                                    <audio id="audioPlayer_@item.FilePath" class="audioPlayer" controls style="display: none">
                                        <source src="@mp3filepath" type="audio/mpeg" />
                                        Your browser does not support the audio element.
                                    </audio>
                                </div>
                            }
                            else
                            {
                                <span>@Localizer["FileNotAvailable", item.FilePath]</span>
                            }
                        </td>
                        <td>@matchLength</td> @* Відображаємо довжину збігу *@
                        <td>@position</td> @* На якій позиції співпадає *@
                        <td class="col-actions hide-mobile">
                            <a asp-page="./Edit" asp-route-id="@item.ID" class="link-dark"><i class="fas fa-edit"></i></a>
                            <a asp-page="./Delete" asp-route-id="@item.ID" class="link-danger" style="margin-left:50px"><i class="fas fa-remove"></i></a>
                        </td>
                    </tr>
                }
            }
            else if (Model.Melody is not null && Model.Melody.Count > 0 && Model.NoteSearch is false)
            {
                <!--якщо SEARCH ЗА НАЗВАМИ-->
                @foreach (var item in Model.Melody)
                {
                    <tr>
                        <!--Назва-->
                        <td>
                            <a asp-page="./Details" asp-route-id="@item.ID" class="link-dark">@Html.DisplayFor(modelItem => item.Title)</a>
                        </td>
                        <!--АВТОР-->
                        <td>
                            @if (item.Author is not null)
                            {
                                if (item.Author.Surname == "Українська народна пісня")
                                {
                                    <span class="song-title" data-full="Українська народна пісня" data-short="укр. нар. пісня">
                                        @Localizer["UkrainianFolkSong"]
                                    </span>
                                }
                                else
                                {
                                    if (lng == "uk")
                                    {
                                        <span class="author-name">@item.Author.Name</span>
                                        <span> @Html.DisplayFor(modelItem => item.Author.Surname)</span>
                                    }
                                    else
                                    {
                                        <span class="author-name">@item.Author.NameEn</span>
                                        <span> @Html.DisplayFor(modelItem => item.Author.SurnameEn)</span>
                                    }
                                }
                            }
                        </td>
                        <!--Файл-->
                        <td>
                            @if (!string.IsNullOrEmpty(item.FilePath))
                            {
                                var midifilepath = Url.Content($"~/melodies/{item.FilePath}");
                                var mp3filepath = Url.Content($"~/mp3/{item.Mp3Filepath}");
                                <div style="display:inline-flex">
                                    <a href="@midifilepath" download class="btn btn-outline-dark light-background">
                                        <i class="fas fa-download"></i>
                                    </a>
                                    <form method="post">
                                        <button type="submit" asp-page-handler="Play" asp-route-midiPath="@item.FilePath"
                                                class="btn btn-outline-dark light-background playButton"
                                                data-filepath="@item.FilePath" id="playButton_@item.FilePath">
                                            <i class="fas fa-play"></i>
                                        </button>
                                    </form>
                                    <button id="stopButton_@item.FilePath" disabled="disabled"
                                            class="stopButton btn btn-outline-dark light-background">
                                        <i class="fas a-stop"></i>
                                    </button>
                                    <audio id="audioPlayer_@item.FilePath" class="audioPlayer" controls style="display: none">
                                        <source src="@mp3filepath" type="audio/mpeg" />
                                        Your browser does not support the audio element.
                                    </audio>
                                </div>
                            }
                            else
                            {
                                <span>@Localizer["FileNotAvailable", item.FilePath]</span>
                            }
                        </td>
                        <!-- редагувати/вилучити -->
                        <td class="col-actions">
                            <a asp-page="./Edit" asp-route-id="@item.ID" class="link-dark"><i class="fas fa-edit"></i></a>
                            <a asp-page="./Delete" asp-route-id="@item.ID" class="link-danger" style="margin-left:50px"><i class="fas fa-remove"></i></a>
                        </td>
                    </tr>
                }

            }

            else
            {
                <!--якщо нічого не знайдено-->

                <tr><td>@Model.Description</td></tr>

            }
        </tbody>
    </table>
</div>


