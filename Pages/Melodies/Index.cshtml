@page
@model Melodies25.Pages.Melodies.IndexModel

@{
    ViewData["Title"] = "Мелодії в Базі даних";
    var message = TempData["Message"];
    if (message != null)
    {
        <script>
            alert('@message');
        </script>
    }
}

<h1>Мелодії в Базі даних</h1>

<a asp-page="search">Розширений пошук</a>

<p>
    <a asp-page="Create">Додати мелодію</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Назва
            </th>
            <th>
                Файл
            </th>
            <th>
                Рік
            </th>
            <th>
                Автор
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Melody)
        {
            <tr>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.ID" class="link-dark">@Html.DisplayFor(modelItem => item.Title)</a>
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Filepath))
                    {
                        var filepath = Url.Content($"~/melodies/{item.Filepath}");
                        <div style="display:inline-flex">
                            <a href="@filepath" download class="btn btn-outline-dark light-background">
                                <i class="fas fa-download"></i>
                            </a>
                            <form method="post">
                                <button type="submit" asp-page-handler="Play" asp-route-midiPath="@item.Filepath" class="btn btn-outline-dark light-background">
                                    <i class="fas fa-play"></i>
                                </button>
                            </form>
                            <button id="stopButton" class="btn btn-outline-dark light-background"><i class="fas fa-stop"></i></button>
                        </div>
                    }
                    else
                    {
                        <span>Файл не доступний</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.Name) @Html.DisplayFor(modelItem => item.Author.Surname)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID" class="link-dark">Редагуватти</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID" class="link-danger">Вилучити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="controlcontainer infocontainer">

    <p>@Model.Msg</p>
    <p>@Model.Errormsg</p>
    @if (TempData["AudioFile"] != null)
    {
        <p>@TempData["AudioFile"]</p>
        <audio id="audioPlayer" controls autoplay style="display: none">
            <source src="@TempData["AudioFile"]" type="audio/mpeg" />
            Your browser does not support the audio element.
        </audio>
    }
    else
    {
        <p>File is not ready</p>
    }
</div>

<script>
    // Отримуємо доступ до аудіо елемента та кнопок
    var audioPlayer = document.getElementById('audioPlayer');
    var stopButton = document.getElementById('stopButton');
    var playButton = document.getElementById('playButton');

    stopButton.onclick = function() {
        console.log(new Date().toLocaleString() + " playing stopped")
        audioPlayer.pause();
        audioPlayer.currentTime = 0;
        playButton.disabled = false;
    };
    
    audioPlayer.oncanplaythrough = function() {
        
        if (!audioPlayer.paused) {
            console.log(new Date().toLocaleString() + " ready to play file")
            playButton.disabled = true; 
        }
    };

    
    audioPlayer.onpause = function() {
        console.log(new Date().toLocaleString() + " stop button disabled")
        stopButton.disabled = true; 
    };
    
    
    
    audioPlayer.onplay = function() {
        console.log(new Date().toLocaleString() + " stop button disabled")
        stopButton.disabled = false; 
    };

    
    playButton.onclick = function() {
        console.log(Date.now.toString() + " start to play file")
        audioPlayer.play(); 
        playButton.disabled = true; // 
    };

    
</script>
