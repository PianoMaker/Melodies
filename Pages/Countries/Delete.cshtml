@page
@model Melodies25.Pages.Countries.DeleteModel

@{
    ViewData["Title"] = "Мелодія - вилучити країну";
}

<h1>Вилучення</h1>

<h3>Чи впевнені, що хочете вилучити?</h3>
<div>
    <h4>Країни</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Країна
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Country.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Назад до списку</a>
    </form>
</div>
