@page
@model Melodies25.Pages.Countries.CreateModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
 ViewData["Title"] = Localizer["AddCountry"];
}
<div class="infocontainer melody-width">
<h1>@Localizer["AddCountry"]</h1>
 <div class="col-md-4">
 <form method="post">
 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
 <div class="form-group">
 <label asp-for="Country.Name" class="control-label">Назва</label>
 <input asp-for="Country.Name" class="form-control" />
 <span asp-validation-for="Country.Name" class="text-danger"></span>
 </div>
 <div class="form-group">
 <label asp-for="Country.NameEn" class="control-label">Name</label>
 <input asp-for="Country.NameEn" class="form-control" />
 <span asp-validation-for="Country.NameEn" class="text-danger"></span>
 </div>
 <div class="form-group">
 <input type="submit" value="@Localizer["Create"]" class="btn-melody" />
 </div>
 </form>
 </div>
 <p>@Model.Msg</p>

    <a asp-page="Index" class="btn-melody">@Localizer["Back"]</a>
</div>

@section Scripts {
 @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
