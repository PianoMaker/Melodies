@page
@model Melodies25.Pages.Countries.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="infocontainer">
    <h1>Редагування країни</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Country.ID" />
                <div class="form-group">
                    <label asp-for="Country.Name" class="control-label">Назва країни</label>
                    <input asp-for="Country.Name" class="form-control" />
                    <span asp-validation-for="Country.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country.NameEn" class="control-label">Country name</label>
                    <input asp-for="Country.NameEn" class="form-control" />
                    <span asp-validation-for="Country.NameEn" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Country.FlagUrl" class="control-label">Посилання на прапор (URL або шлях від wwwroot)</label>
                    <input asp-for="Country.FlagUrl" class="form-control" placeholder="Наприклад: /images/flags/ua.png або https://..." />
                    <span asp-validation-for="Country.FlagUrl" class="text-danger"></span>
                </div>

                @{
                    string? flagSrc = null;
                    if (!string.IsNullOrWhiteSpace(Model.Country?.FlagUrl))
                    {
                        var f = Model.Country.FlagUrl.Trim();
                        if (f.StartsWith("http://", StringComparison.OrdinalIgnoreCase) || f.StartsWith("https://", StringComparison.OrdinalIgnoreCase))
                        {
                            flagSrc = f;
                        }
                        else if (f.StartsWith("~/") || f.StartsWith("/"))
                        {
                            flagSrc = Url.Content(f);
                        }
                        else
                        {
                            flagSrc = Url.Content("~/" + f);
                        }
                    }
                }

                @if (!string.IsNullOrEmpty(flagSrc))
                {
                    <div class="form-group mt-2">
                        <label class="control-label">Попередній перегляд прапора</label>
                        <div>
                            <img src="@flagSrc" alt="Flag" style="max-width:120px; max-height:80px; border:1px solid #ddd; padding:4px;" />
                        </div>
                    </div>
                }

                <div class="form-group mt-3">
                    <input type="submit" value="Зберегти" class="btn btn-outline-dark light-background" />
                    <a asp-page="./Index" class="btn btn-outline-dark light-background">Назад до списку</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
