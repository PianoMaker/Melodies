<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Melodies25</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />    
    <!--<link rel="stylesheet" href="~/css/assets.css" asp-append-version="true" />-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/singerella.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <!--<link rel="stylesheet" href="~/Melodies25.styles.css" asp-append-version="true" />-->

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-sky border-bottom box-shadow mb-0"><!--mb-3 дає відступ, випиляв-->
            <div class="notestaff-container">
                <hr class="notestaff">
                <hr class="notestaff">
                <hr class="notestaff">
                <hr class="notestaff">
                <hr class="notestaff">
            </div>
            <div class="container mb-1">
                <img src="~/images/wcu_newLogo_Монтажна область 1.png" class="logoimage" alt="logo"/>
                <a class="title" asp-area="" asp-page="/Index">Мелодія</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                        
                        <li class="nav-item">
                            <a class="nav-link navmelody" asp-page="/Melodies/Index">Мелодії</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navmelody" asp-page="/Authors/Index">Автори</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navmelody" asp-page="/Countries/Index">Країни</a>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link navmelody" asp-area="" asp-page="/Privacy">Про сайт</a>
                        </li>
                        <!--
                        <partial name="_LoginPartial" />
                        -->
                        <a class="nav-link navmelody" asp-area="" asp-page="Account/Users">Користувачі</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link navmelody" asp-area="" asp-page="Account/Users">Користувачі</a>
                        }
                        </ul>
                    
                </div>
                
            </div>
            
        </nav>
        
        
    </header>
    @if (ViewContext.RouteData.Values["Page"]?.ToString() == "/Index")
    {
     <div class="mainpage">
        @RenderBody()
        </div>
    }
    else
    {
        <div class="container h-85">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Melodies25 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>