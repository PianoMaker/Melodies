@page
@model Melodies25.Pages.Authors.IndexModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "Мелодія - автори";
    var lng = Model.SelectedLang;
}
<div class="infocontainer melody-width hideformenu">
    <div class="spaceformenu"></div>
    <h1>@Localizer["AuthorsInDatabase", Model.Author.Count]</h1>
    <div style="display:inline">

        <a asp-page="Create" class="btn-melody">@Localizer["AddAuthor"]</a>

        <form method="post" asp-page-handler="translit" style="display:inline">
            <button type="submit" class="btn-melody m-4">@Localizer["Update"]</button>
        </form>
    </div>
</div>

<div class="infocontainer melody-width" style="margin-top:0.75rem;">
    <div style="display:flex; align-items:center; gap:0.5rem;">
        <!-- Small search icon on the left of the input -->
        <div aria-hidden="true" style="width:32px; text-align:center; color:#666;">
            <i class="fas fa-search" style="font-size:14px;"></i>
        </div>

        <input id="authorSearchInputIndex" type="search" class="form-control" placeholder="Прізвище, ім'я або англ. варіант" aria-label="Пошук авторів" style="max-width:520px;" />

        <div id="authorSearchInfo" class="small text-muted mt-1" style="display:none">Знайдено: <span id="authorSearchCount">0</span></div>
    </div>
</div>

<table class="table" id="authorsTable" style="margin-top:0.75rem;">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.SurnameSort"
                   asp-route-SelectedLang="@Model.SelectedLang"
                   class="link-light">
                    @Localizer["AuthorColumn"] @(Model.SurnameSort == "surname_asc" ? "▲" : "▼")
                </a>
            </th>
            <th class="d-none d-md-flex">@Localizer["YearsOfLife"]</th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.CountrySort"
                   asp-route-SelectedLang="@Model.SelectedLang"
                   class="link-light">
                    @Localizer["Country"] @(Model.CountrySort == "country_asc" ? "▲" : "▼")
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.MelodiesCountSort"
                   asp-route-SelectedLang="@Model.SelectedLang"
                   class="link-light">
                    @Localizer["MelodiesOnSite"] @(Model.MelodiesCountSort == "melody_asc" ? "▲" : "▼")
                </a>
            </th>
            @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
            {
                <th>@Localizer["EditDelete"]</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Author)
        {
            // add data-* attributes with all four fields so client search can match them regardless of displayed language
            <tr class="author-row"
                data-name="@Html.Raw(item.Name ?? "")"
                data-surname="@Html.Raw(item.Surname ?? "")"
                data-nameen="@Html.Raw(item.NameEn ?? "")"
                data-surnameen="@Html.Raw(item.SurnameEn ?? "")">
                <td>
                    @if (lng == "uk")
                    {
                        <a asp-page="./Details" asp-route-id="@item.ID" class="link-dark">@Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.Surname)</a>
                    }
                    else
                    {
                        <a asp-page="./Details" asp-route-id="@item.ID" class="link-dark">@Html.DisplayFor(modelItem => item.NameEn) @Html.DisplayFor(modelItem => item.SurnameEn)</a>
                    }
                </td>
                <td class="d-none d-md-flex">
                    @Html.DisplayFor(modelItem => item.DateOfBirth) - @Html.DisplayFor(modelItem => item.DateOfDeath)
                </td>
                <td>
                    @if (lng == "uk")
                    {
                        <a asp-page="../Countries/Details" asp-route-id="@item.Country?.ID" class="link-dark">
                        @(item.Country != null ? item.Country.Name : Localizer["NoData"])</a>
                    }
                    else
                    {
                        @(item.Country != null ? item.Country.NameEn : Localizer["Unknown"])
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MelodiesCount)
                </td>
                @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                {
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID" class="link-dark"><i class="fas fa-edit"></i></a>
                        <a asp-page="./Delete" asp-route-id="@item.ID" class="link-danger" style="margin-left:50px"><i class="fas fa-remove"></i></a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<script src="~/js/authors-index.js" asp-append-version="true"></script>

